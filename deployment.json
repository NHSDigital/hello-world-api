{
  "name": "$INSTANCE",
  "base_path": "hello-paas",
  "environment": "$ENVIRONMENT",
  "routes": [
    {
       "path": "/hello/user",
       "access_requirements": {"nhs_login": "P5"},
       "verbs": ["GET"]
    },
    {
       "path": "/hello/application",
       "access_requirements": {"app": "level3"},
       "verbs": ["GET"]
    },
    {
       "path": "/hello/world",
       "access_requirements": {},
       "verbs": ["GET"]
    }
  ],
  "access_modes": [
    {
      "title": "Hello Paas User Restricted",
      "grants_access": {"nhs_login": "P5"}    
    },
    {
      "title": "Hello Paas Application Restricted",
      "grants_access": {"app": "level3"}
    }
  ],
  "targets": [
    {
      "type": "hosted",
      "containers": [
        {
          "name": "hello-world",
          "image": "$DOCKER_REGISTRY/hello-world_hello-world:$DOCKER_TAG",
          "environment": {
            "LOG_LEVEL": "info",
            "UPSTREAM": "https://$ENVIRONMENT.api.service.nhs.uk",
            "NODE_ENV": "production"
          }
        }
      ]
    }
  ]
}