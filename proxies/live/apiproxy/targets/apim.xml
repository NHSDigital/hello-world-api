<TargetEndpoint name="apim">
  <Flows>
    <Flow name="Status">
      <Request>
        <Step>
          <Name>KeyValueMapOperations.GetSharedSecureVariables</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>JS.SetStatusResponse</Name>
        </Step>
        <Step>
          <Name>AssignMessage.SetStatusResponse</Name>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/_status") and ((request.verb = "GET") or (request.verb = "HEAD"))</Condition>
    </Flow>
  </Flows>
  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <PreFlow name="PreFlow">
    <Request/>
    <Response>
      <Step>
        <Name>AssignMessage.AddCors</Name>
      </Step>
    </Response>
  </PreFlow>
  <HTTPTargetConnection>
    {{ HOSTED_TARGET_CONNECTION }}
  </HTTPTargetConnection>
</TargetEndpoint>
