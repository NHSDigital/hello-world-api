<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <FaultRules/>
    <DefaultFaultRule name="DefaultFaultRule">
        <Step>
            <Name>AssignMessage-AddCorsHeaders</Name>
        </Step>
        <AlwaysEnforce>true</AlwaysEnforce>
    </DefaultFaultRule>
    <Flows>
        <Flow name="Flow-GetHello">
            <Description/>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Flow-GetHelloApplication">
            <Description/>
            <Request>
                <Step>
                    <Name>VerifyApiKey-Header</Name>
                </Step>
                <Step>
                    <Name>AssignMessage-RemoveApiKeyHeader</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/application") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Flow-GetHelloUser">
            <Description/>
            <Request>
                <Step>
                    <Name>Oauth-VerifyAccessToken</Name>
                </Step>
                <Step>
                    <Name>AssignMessage-RemoveAuthorizationHeader</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/user") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Flow-OptionsCors">
            <Description/>
            <Request/>
            <Response/>
            <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request/>
        <Response>
            <Step>
                <Name>AssignMessage-AddCorsHeaders</Name>
            </Step>
        </Response>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>$(SERVICE_BASE_PATH)</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="NoRoute">
        <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
    </RouteRule>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
