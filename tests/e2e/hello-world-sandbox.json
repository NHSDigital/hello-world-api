			"name": "Hello World - Open access",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "27fab10f-2b3c-4220-98f5-43eff2a21569",
						"exec": [
							"pm.environment.set(\"expected_greeting\", \"Hello World!\");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "4ce49e67-012f-42ac-a2aa-b8ac7ec374d7",
						"exec": [
							"pm.test(\"Returns status code 200 OK\", () => {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Returns correct mock response\", () => {",
							"    const responseJson = pm.response.json()",
							"    const expectedGreeting = pm.environment.get(\"expected_greeting\")",
							"    pm.expect(responseJson.message).to.eql(expectedGreeting)",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/hello/world",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"hello",
						"world"
					]
				}
			},
			"response": []
		},
		{
			"name": "Hello World - _ping response with deployed version",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "72e85e1b-d969-422e-8a57-24fd2028e08a",
						"exec": [
							"pm.test(\"Status code\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var versionRegex = /v[0-9]+\\.[0-9]+\\.[0-9]+-\\w+/;",
							"var onlyNumberRegex = /^\\d+$/;",
							"",
							"pm.test(\"Json body has version\", function () {",
							"    var version = pm.response.json().version;",
							"    pm.expect(versionRegex.test(version)).to.be.true;",
							"});",
							"",
							"pm.test(\"Json body has revision\", function () {",
							"    var revision = pm.response.json().revision;",
							"    pm.expect(onlyNumberRegex.test(revision)).to.be.true;",
							"});",
							"",
							"pm.test(\"Json body has releaseId\", function () {",
							"    var releaseId = pm.response.json().releaseId;",
							"    pm.expect(onlyNumberRegex.test(releaseId)).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/_ping",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"_ping"
					]
				}
			},
			"response": []
		},
